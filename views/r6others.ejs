<style>
    html {
        scroll-behavior: smooth;
    }
</style>
<script>
    var i = 0;
    var j = 0;

    function start() {
        if (i >= 5) {
            i = 0
        }
        if (j >= 3) {
            j = 0
        }
        var back = document.getElementById('back')
        var h2text = ["", "Games Played<br> <span id='banner'>  <%= ro.stats.general.games_played %></span>", "Melee Kills <br> <span id='banner'><%= ro.stats.general.melee_kills %></span>", "<span id='banner'><%= ro.username %></span>", "Headshots<br> <span id='banner'> <%= ro.stats.general.headshots %></span>", "Play Time <br> <span id='banner'><%= Math.round( ro.stats.general.playtime/86400) %>Days</span>"]
        var h2 = document.getElementById("eddi");
        h2.style.transition = "0.5s"; //fade speed
        var images = ['', 'https://www.teahub.io/photos/full/12-124675_rainbow-six-siege.jpg', 'https://www.wallpapertip.com/wmimgs/30-304388_rainbow-six-siege.jpg', 'https://i.pinimg.com/originals/18/75/19/187519a4719ca8baead7eba222787ef1.jpg', 'https://www.wallpapertip.com/wmimgs/30-304388_rainbow-six-siege.jpg']
        setTimeout(function() {
            h2.style.opacity = 0;
            setTimeout(function() {
                back.style.background = "URL(" + images[j] + ")"
                back.style.backgroundSize = "cover"
                back.style.backgroundPosition = "50% 30%"
                back.style.animationName = "back"
                h2.innerHTML = h2text[i];
                h2.style.opacity = 1;
            }, 500);
        }, 1000)
        i++
        j++;
    }

    function audio() {
        var audio = document.getElementById('music')
        var acon = document.getElementById('audiocon')
        if (audio.paused) {
            console.log('paused');
            audio.play();
            acon.className = "fa fa-volume-up";
        } else {
            console.log('playing');
            audio.pause();
            acon.className = "fa fa-volume-off";
        }
    }
</script>

<body onload="setInterval(() => {start()}, 5000);">

